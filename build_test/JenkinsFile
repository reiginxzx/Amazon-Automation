pipeline{

    agent any

    stages('test'){

        stage('test'){
            steps{
                dir("demo"){
                bat "mvn clean compile test"
                }
            }
        }

        stage('Build application'){
            steps{
                echo "mvn clean install -Dmaven.test.skip-true"
            }
        }

        stage('Create Docker image'){
            steps{
                echo "Creando Docker"
            }
        }


    }

}